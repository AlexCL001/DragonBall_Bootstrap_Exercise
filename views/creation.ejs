<%- include('./partials/menu') %>
<h1>Créer<br>un personnage</h1>

    <form action="#" method="" class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" name="personnageRadio" id="personnageRadio1" aria-label="Son Goku" checked>
                    <label for="personnageRadio1"><img class="my-2" src="images/goku.png" alt="Son Goku"></label>
                </div>
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" name="personnageRadio" id="personnageRadio2" aria-label="Vegeta">
                    <label for="personnageRadio2"><img class="my-2" src="images/vegeta.png" alt="Vegeta"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" name="personnageRadio" id="personnageRadio3" aria-label="Broly">
                    <label for="personnageRadio3"><img class="my-2" src="images/broly.png" alt="Broly"></label>
                </div>
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" name="personnageRadio" id="personnageRadio4" aria-label="kid buu">
                    <label for="personnageRadio4"><img class="my-2" src="images/kidBuu.png" alt="Kid Buu"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" name="personnageRadio" id="personnageRadio5" aria-label="freeza">
                    <label for="personnageRadio5"><img class="my-2" src="images/freeza.png" alt="Freeza"></label>
                </div>
                <div class="col-lg-6 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="radio" name="personnageRadio" id="personnageRadio6" aria-label="cell">
                    <label for="personnageRadio6"><img class="my-2" src="images/cell.png" alt="Cell"></label>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="my-3">Création du personnage</h2>
            <div class="mb-3">
                <label for="nomPersonnage" class="form-label">Nom du personnage :</label>
                <input type="text" class="form-control" id="nomPersonnage">
                <div class="form-text">Le nom du personnage ne peut pas contenir de caractères spéciaux.</div>
            </div>
            <p>Race du personnage :</p>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="classePersonnage" id="classePersonnage1" checked  aria-label="saiyan">
                <label class="form-check-label" for="classePersonnage1">
                    Saiyan
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="classePersonnage" id="classePersonnage2" aria-label="namek">
                <label class="form-check-label" for="classePersonnage2">
                    Namek
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="classePersonnage" id="classePersonnage3" aria-label="ange">
                <label class="form-check-label" for="classePersonnage3">
                    Ange
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="classePersonnage" id="classePersonnage4"  aria-label="android">
                <label class="form-check-label" for="classePersonnage4">
                    Android
                </label>
            </div>
            <label class="my-3" for="couleurVetement">Choisir une couleur de vêtement :</label>
            <br>
            <input type="color" aria-label="choisir une couleur" id="couleurVetement">
            <h2 class="my-3">Caractéristiques du personnage</h2>
            <div class="mb-3">
                <label for="ajouterObjet" class="form-label">Ajouter un objet :</label>
                <input class="form-control" type="file" id="ajouterObjet">
            </div>
            <label for="capaciteUnique" class="form-label">Capacité unique :</label>
            <select class="form-select mb-3" aria-label="Capacité unique" id="capaciteUnique">
                <option value="1" selected>10% plus de dégat</option>
                <option value="2">10% plus de défense</option>
                <option value="3">10% plus d'xp</option>
                <option value="4">10% plus d'or</option>
            </select>
            <label for="attaque" class="form-label">Attaque :</label>
            <input aria-label="Niveau d'attaque" id="attaque" type="range" class="form-range" min="0" max="10">
            <label for="defense" class="form-label">Défense :</label>
            <input aria-label="Niveau de défense" id="defense" type="range" class="form-range" min="0" max="10">
            <label for="sante" class="form-label">Santé :</label>
            <input aria-label="Niveau de santé" id="sante" type="range" class="form-range" min="0" max="10">
            <label for="vitesse" class="form-label">Vitesse :</label>
            <input aria-label="Niveau de vitesse" id="vitesse" type="range" class="form-range" min="0" max="10">
            <button type="submit" class="btn btn-primary my-5 text-light">Envoyer</button>
            <button id="reset" type="reset" class="btn btn-primary text-light">Annuler</button>
            <button id="aleatoire" type="button" class="btn btn-light text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dice-5" viewBox="0 0 16 16">
                <path d="M13 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h10zM3 0a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V3a3 3 0 0 0-3-3H3z"/>
                <path d="M5.5 4a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm8 0a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0 8a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-8 0a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm4-4a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                </svg> 
                Aléatoire
            </button>
        </div>
    </form>
